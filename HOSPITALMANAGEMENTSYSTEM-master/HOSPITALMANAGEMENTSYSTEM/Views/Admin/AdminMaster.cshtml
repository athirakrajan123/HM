<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminHome</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <style>
        body{
            font-size:18px;
        }
        .wrapper {
            display: flex;
            align-items: stretch;
        }

        #sidebar {
            min-width: 300px;
            max-width: 300px;
            background: rgba(128,128,128,0.2);
            color: #fff;
            transition: all 0.3s;
        }

            #sidebar.active {
                margin-left: -250px;
            }

            #sidebar .sidebar-header {
                padding: 20px 20px 0 20px;
                color: black;
            }

            #sidebar ul.components {
                padding: 0 0;
            }

            #sidebar ul p {
                color: #fff;
                padding: 10px;
            }

            #sidebar ul li a {
                padding: 10px;
                font-size: 1.1em;
                display: block;
            }

                #sidebar ul li a:hover {
                    color: #7386D5;
                    background: #fff;
                }

            #sidebar ul li.active > a,
            a[aria-expanded="true"] {
                color: #fff;
                background: #6d7fcc;
            }

        
        ul ul a {
            font-size: 0.9em !important;
            padding-left: 30px !important;
            background: #6d7fcc;
        }

        ul.CTAs {
            padding: 20px;
        }

            ul.CTAs a {
                text-align: center;
                font-size: 0.9em !important;
                display: block;
                border-radius: 5px;
                margin-bottom: 5px;
            }

        
        a.article,
        a.article:hover {
            background: #6d7fcc !important;
            color: #fff !important;
        }
        .ul.pagination {
            display: inline-block;
            padding: 0;
            margin: 0;
        }

        ul.pagination li {
            display: inline;
        }

        ul.pagination li a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

        ul.pagination li a.active {
            background-color: #4CAF50;
            color: white;
        }

        ul.pagination li a:hover:not(.active) {
            background-color: #ddd;
        }

    </style>
</head>
<body>
    <center>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">

            <div class="container-fluid" style="font-weight: bold">
                <a class="navbar-brand" href="#" style="color:whitesmoke">RAJAGIRI SUPER SPECIALITY HOSPITAL</a>


                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item" style="color:whitesmoke;margin-left:950px">
                            <a href="/HomePage/Login" class="nav-link active" style="color:white">LOGOUT</a>
                        </li>
                        <li class="nav-item" style="color:whitesmoke;margin-top:2px">

                            <i class="bi-box-arrow-right" style="color:white;font-size:24px"></i>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </center>
    <div style="display: flex;font-family:'Times New Roman', Times, serif ">
        <div class="wrapper" >
            <nav id="sidebar" >
                <div class="sidebar-header">
                    <h3 style="text-align:center"><b>ADMIN</b></h3>
                </div>
                <br />
                <div style="background-image: url(/images/Admin-icon.png); margin-left: 70PX; width: 150px; height: 150px; background-repeat: no-repeat; background-size: cover; background-position: center">
                    
                </div>
                <br />
                <ul class="list-unstyled components" style="font-weight:bold">
                   
                    <li>
                        @Html.ActionLink(" HOME", "AdminHome", "Admin", new { @class = "nav-link active bi-house-fill", @style = "color:black;font-size:20px;" })

                        
                    </li>

                    <li>
                        @Html.ActionLink(" SPECIALIZATION", "Specialization", "Admin", new { @class = "nav-link active bi-file-medical-fill", @style = "color:black;font-size:20px;" })

                        

                    </li>
                    <li>
                        @Html.ActionLink(" DOCTOR", "Doctor", "Admin", new { @class = "nav-link active fa fa-user-md", @style = "color:black;font-weight:bold;font-size:20px; " })

                        

                    </li>
                    <li>
                        @Html.ActionLink(" PATIENT", "Patient", "Admin", new { @class = "nav-link active fas fa-user-friends", @style = "color:black;font-size:20px;" })

                    </li>
                    <li>
                        @Html.ActionLink(" APPOINTMENTS", "Appointment", "Admin", new { @class = "nav-link active bi bi-calendar2-fill", @style = "color:black;font-size:20px;" })

                        
                    </li>
                </ul>


            </nav>
        </div>


        <div class="container-fluid" style="font-size:18px">
            @RenderBody()
        </div>
    </div>
</body>
</html>

