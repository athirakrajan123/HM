
@{
    ViewBag.Title = "Patient";
    Layout = "~/Views/Admin/AdminMaster.cshtml";
}

<div style="display: flex; justify-content: space-evenly;margin-top:100px">
    <div style="background-color:rgb(11 6 121);border:none;border-radius:30px; height:200px;width:30%;">

        <div style="width:100%;color:white;text-align:center;margin-top:50px;text-decoration:none;">
            @Html.ActionLink("ADD PATIENT ", "AddPatient", "Admin", new { @style = "width:100%;color:white;text-align:center;margin-top:50px;text-decoration:none;font-weight:bold;font-size:20px" })
            <br />

            <i class="bi-person-plus-fill" style="font-size:64px"></i>
        </div>
    </div>
    <div style="background-color: rgb(255 0 0); border: none; border-radius: 30px; height: 200px; width: 30% ">
        <div style="width:100%;color:white;text-align:center;margin-top:50px">
            @Html.ActionLink("VIEW PATIENT ", "ShowPatient", "Admin", new { @style = "width:100%;color:white;text-align:center;margin-top:50px;text-decoration:none;font-weight:bold;font-size:20px" })
            <br />
            <i class="bi-file-earmark-person-fill" style="font-size:64px"></i>
        </div>
    </div>
