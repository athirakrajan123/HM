<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DoctorHome</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <style>
        body {
        }

        .wrapper {
            display: flex;
            align-items: stretch;
        }

        #sidebar {
            min-width: 250px;
            max-width: 250px;
            background: rgba(128,128,128,0.2);
            color: #fff;
            transition: all 0.3s;
        }

            #sidebar.active {
                margin-left: -250px;
            }

            #sidebar .sidebar-header {
                padding:20px 20px 0 20px;
                color: black;
            }

            #sidebar ul.components {
                padding: 20px 0;
            }

            #sidebar ul p {
                color: #fff;
                padding: 10px;
            }

            #sidebar ul li a {
                padding: 10px;
                font-size: 1.1em;
                display: block;
            }

                #sidebar ul li a:hover {
                    color: #7386D5;
                    background: #fff;
                }

            #sidebar ul li.active > a,
            a[aria-expanded="true"] {
                color: #fff;
                background: #6d7fcc;
            }


        ul ul a {
            font-size: 0.9em !important;
            padding-left: 30px !important;
            background: #6d7fcc;
        }

        ul.CTAs {
            padding: 20px;
        }

            ul.CTAs a {
                text-align: center;
                font-size: 0.9em !important;
                display: block;
                border-radius: 5px;
                margin-bottom: 5px;
            }


        a.article,
        a.article:hover {
            background: #6d7fcc !important;
            color: #fff !important;
        }
    </style>
</head>
<body>
    <center>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">

            <div class="container-fluid" style="font-weight: bold">
                <a class="navbar-brand" href="#" style="color:whitesmoke">RAJAGIRI SUPER SPECIALITY HOSPITAL</a>


                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item" style="color:whitesmoke;margin-left:950px">
                            <a href="/HomePage/Login" class="nav-link active" style="color:white">LOGOUT</a>
                        </li>
                        <li class="nav-item" style="color:whitesmoke;margin-top:2px">

                            <i class="bi-box-arrow-right" style="color:white;font-size:24px"></i>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </center>
    <div style="display: flex;font-family:'Times New Roman', Times, serif ">
        <div class="wrapper">
            <nav id="sidebar">
                <div class="sidebar-header">
                    <h3 style="text-align:center"><b>@ViewBag.name</b></h3>
                    <i class="fa fa-user-md" style="font-size:150px;position:center;margin-left:30px"></i>
                    <br />
                    <h5 style="text-align:center"><b>@ViewBag.id</b></h5>

                </div>
                <br />
                @*<div style="background-image:url(/images/Doctor-icon.png);height:200px;background-repeat:no-repeat;background-size:cover; background-position:center">*@
               
                <br />
                <ul class="list-unstyled components" style="font-weight:bold">

                    <li>
                        @Html.ActionLink(" HOME", "DoctorHome", "Doctor", new { @class = "nav-link active bi-house-fill", @style = "color:black;font-size:20px;" })


                    </li>

                    <li>
                        @Html.ActionLink(" PROFILE", "ProfileView", "Doctor", new { @class = "nav-link active fa fa-medkit", @style = "color:black;font-size:20px;" })



                    </li>
                    <li>
                        @Html.ActionLink(" PATIENTS", "Appointments", "Doctor", new { @class = "nav-link active fas fa-user-friends", @style = "color:black;font-weight:bold;font-size:20px; " })



                    </li>
                    <li>
                        @Html.ActionLink(" APPOINTMENTS", "Patient", "Doctor", new { @class = "nav-link active bi-calendar-plus-fill", @style = "color:black;font-size:20px;" })

                    </li>
                    
                </ul>


            </nav>
        </div>


        <div class="container-fluid" style="font-size:18px">
            @RenderBody()
        </div>
    </div>
</body>
</html>

